{
  "name": "@curium.rocks/sql-chronicler",
  "version": "0.1.1-3",
  "description": "A library that persists IDataEmitter events to an SQL store using TypeORM",
  "main": "build/src/lib.js",
  "scripts": {
    "test": "nyc mocha --require ts-node/register --require source-map-support/register --recursive 'test/**/*.ts'",
    "build": "node_modules/typescript/bin/tsc --project ./",
    "lint": "eslint src --ext .ts",
    "clean": "rm -fr build",
    "prepare": "npm run build",
    "doc": "typedoc src/lib.ts",
    "scan": "sonar-scanner -Dsonar.qualitygate.wait=true -Dsonar.organization=curium-rocks -Dsonar.projectKey=curium-rocks_sql-chronicler -Dsonar.sources=. -Dsonar.host.url=https://sonarcloud.io -Dsonar.login=$SONARQUBE_KEY -Dsonar.javascript.lcov.reportPath=coverage/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/curium-rocks/sql-chronicler.git"
  },
  "keywords": [
    "IDataEmitter",
    "sql",
    "iot",
    "TypeORM",
    "persist",
    "data store",
    "chronicler"
  ],
  "devDependencies": {
    "@curium.rocks/ping-pong-emitter": "^0.1.1-13",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "chai": "^4.3.4",
    "eslint": "^7.30.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.0.2",
    "mssql": "^7.2.1",
    "mysql2": "^2.3.0",
    "nyc": "^15.1.0",
    "pg": "^8.7.1",
    "sequelize-cli": "^6.2.0",
    "sonarqube-scanner": "^2.8.1",
    "source-map-support": "^0.5.19",
    "sqlite3": "^5.0.2",
    "testcontainers": "^7.20.3",
    "ts-node": "^10.1.0",
    "typedoc": "^0.22.0",
    "typescript": "^4.3.5"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/curium-rocks/sql-chronicler/issues"
  },
  "homepage": "https://github.com/curium-rocks/sql-chronicler#readme",
  "dependencies": {
    "@curium.rocks/data-emitter-base": "^0.1.1-alpha.35",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.3.x"
  }
}
